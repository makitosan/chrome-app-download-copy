{
  "name": "Download Copy",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "28",
  "description": "Chrome App to Copy File to Specific Directory",
  "offline_enabled": true,
  "icons": {
    "128": "assets/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "permissions": [
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory",
        "requestFileSystem"
      ]
    },
    "storage"
  ],
  "file_handlers": {
    "image": {
      "types": [
        "image/png",
        "image/jpeg"
      ]
    },
    "any": {
      "extensions": [
        "*.hex"
      ]
    },
    "pack": {
      "types": [
        "*"
      ],
      "include_directories": true,
      "verb": "pack_with"
    }
  }
}
